<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <form method="GET" action="/chats/new">
    <button>New message</button>
</form>
<br />
    <h2>All chats</h2>
     <% for(let chat of chats) { %>
        <div class="chat">
            <p> From: <i><%= chat.from %></i></p>
            <div class="msg">
            <p> Message: <%= chat.message %></p>
        </div>
            <p> Received by: <i><%= chat.to %></i></p>
     <hr />
     <form method="GET" action="/chats/<%= chat.id %>/edit">
        <button>Update</button>
    </form>
    <br />
    <form method="POST" action="/chats/<%=chat.id%>?_method=DELETE">
        <button class="del-Button">Delete</button>
    </form>
     <p>Send at: <%=chat.created_at.toString().split(" ")[4]%></p>
     <p><%=chat.created_at.toString().split(" ").slice(0,4).join("-")%></p>
    </div>
    <br/><br/>

       <% } %>
       <script src="app.js"></script>
</body>
</html>
